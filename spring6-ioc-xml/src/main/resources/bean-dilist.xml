<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="empone" class="com.yang.di.ditest.Emp">
        <property name="ename" value="xiaohong"></property>
        <property name="age" value="15"></property>
    </bean>
    <bean id="emptwo" class="com.yang.di.ditest.Emp">
        <property name="ename" value="xiaoming"></property>
        <property name="age" value="16"></property>
    </bean>


    <bean id="dept" class="com.yang.di.ditest.Dept">
        <property name="dname" value="技术部"></property>
        <property name="empList">
            <list>
                <ref bean="empone"></ref>
                <ref bean="emptwo"></ref>
            </list>
        </property>
    </bean>
</beans>